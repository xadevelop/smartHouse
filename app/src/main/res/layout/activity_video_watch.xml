<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/nav_page_tile"
    tools:context=".TalkActivity_old" >

   <ImageView 
       android:contentDescription="@string/activity_talk_iv_dcs_contact"
       android:id="@+id/contactIv"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:scaleType="fitCenter"/>
   
   <ImageView
       android:contentDescription="@string/activity_talk_iv_dcs_me" 
       android:id="@+id/myIv"
       android:layout_width="250.0dp"
       android:layout_height="250.0dp"
       android:layout_gravity="left|bottom"
       android:layout_marginLeft="20.0dip"
       android:layout_marginBottom="20.0dip"/>

</FrameLayout>
