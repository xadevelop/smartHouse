<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网关选择" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dip" >

        <CheckBox
            android:id="@+id/gateway_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="办公室"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/gateway_villa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="别墅"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/gateway_small_highrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="小高层"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/gateway_beijinghome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="办公室"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <View style="@style/MMSplit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View style="@style/MMSplit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/reg_btn"
            android:paddingRight="20dp"
            android:text="@string/confirmPass"
            android:textColor="@color/white"
            android:textSize="@dimen/SmallerTextSize" />

        <View style="@style/MMSplit" />

        <View style="@style/MMSplit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/reg_btn"
            android:padding="10dip"
            android:paddingLeft="20dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/SmallerTextSize" />

        <View style="@style/MMSplit" />
    </LinearLayout>

</LinearLayout>